<%= form_for @restaurant do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name%><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

  <%= f.label :address %><br>
  <%= f.text_field :address%><br>

  <%= f.label :phone %><br>
  <%= f.text_field :phone %><br>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.submit %>

<% end %>
